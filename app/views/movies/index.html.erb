<table>
  <thead>
    <tr>
      <!-- Title Column -->
      <th class="<%= 'sorted asc' if params[:sort] == 'title' && params[:direction] == 'asc' %><%= ' sorted desc' if params[:sort] == 'title' && params[:direction] == 'desc' %>">
        <%= link_to 'Title', movies_path(sort: 'title', direction: sort_direction('title')) %>
        <% if params[:sort] == 'title' %>
          <%= params[:direction] == 'asc' ? '▲' : '▼' %>
        <% end %>
      </th>

      <!-- Rating Column -->
      <th class="<%= 'sorted asc' if params[:sort] == 'rating' && params[:direction] == 'asc' %><%= ' sorted desc' if params[:sort] == 'rating' && params[:direction] == 'desc' %>">
        <%= link_to 'Rating', movies_path(sort: 'rating', direction: sort_direction('rating')) %>
        <% if params[:sort] == 'rating' %>
          <%= params[:direction] == 'asc' ? '▲' : '▼' %>
        <% end %>
      </th>

      <!-- Release Date Column -->
      <th class="<%= 'sorted asc' if params[:sort] == 'release_date' && params[:direction] == 'asc' %><%= ' sorted desc' if params[:sort] == 'release_date' && params[:direction] == 'desc' %>">
        <%= link_to 'Release Date', movies_path(sort: 'release_date', direction: sort_direction('release_date')) %>
        <% if params[:sort] == 'release_date' %>
          <%= params[:direction] == 'asc' ? '▲' : '▼' %>
        <% end %>
      </th>
      <th> Show link </th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date %></td>
                <td><%= link_to 'Show', movie, class: 'button' %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Movie", new_movie_path, class: 'button' %>


